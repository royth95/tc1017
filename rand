#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
int attemps=0;
int random=0;
int x=0;
srand(time(NULL));
random=rand()%100+1;
while(x!=random){
  cout<< "give me a number between 1 and 100"<< endl;
  cin>> x;
  if (x> random){
    cout<<"your number is bigger"<< endl;
  }
  else if(x < random){
    cout<<"your number is smaller"<< endl;
  }
  attemps++;
}
cout<<"congratulationsÂ¡"<< endl;
cout<<"attemps needed"<< attemps <<"."<< endl;
return 0;
}
